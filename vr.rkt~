#lang racket


(define (vr-test)
  `(a-scene
    (a-sky    (color "lightblue"))
    (a-entity ((light "type: ambient; color: #BBB; intensity: 0.4")))
    (a-entity ((light "type: directional; color: #FFF; intensity: 0.8") (position "-0.5 1 1")))

    (a-box ((id "floor") (position "0 0 0")  (color "yellow")   (scale "10 0.2 10")))
    (a-box ((id "leftWall")  (position "-5 1 0") (color "magenta") (scale "0.2 2 10")))
    (a-box ((id "rightWall")  (position "5 1 0")  (color "magenta") (scale "0.2 2 10")))
    (a-box ((id "backWall")  (position "0 1 -5") (color "magenta") (scale "10 2 0.2")))
    (a-box ((id "frontWall")  (position "0 1 5")  (color "magenta") (scale "10 2 0.2")))

    (a-sphere ((color "green") (position "3 1 3") (radius "1")))
    (a-sphere ((color "orange") (position "3 1 -3") (radius "1")))
    (a-sphere (,(random-color) (position "-3 1 3") (radius "1"))
      (a-animation ((attribute "position") (to "-3 1.5 3") (direction "alternate") (dur "400") (repeat "indefinite"))))
    (a-sphere (,(random-color) (position "-3 1 -3") (radius "1")))

    (a-sphere ((random-position "min: -4 1 -4; max: 4 4 4") ,(random-color) (radius "0.5")))))